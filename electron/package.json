{
  "name": "remote-faces-electron",
  "productName": "Remote Faces",
  "description": "A small app to share webcam still images periodically",
  "version": "2.1.0",
  "private": true,
  "author": "Daishi Kato",
  "repository": {
    "type": "git",
    "url": "https://github.com/dai-shi/remote-faces.git"
  },
  "scripts": {
    "start": "electron .",
    "test": "eslint src",
    "dist": "electron-builder --mac --win",
    "release": "electron-builder --mac --win --publish always"
  },
  "main": "src/main.js",
  "dependencies": {
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-console": 0,
      "prefer-template": 0,
      "import/no-extraneous-dependencies": 0
    }
  },
  "build": {
    "appId": "com.axlight.remote-faces",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "protocols": {
      "name": "remote-faces-protocol",
      "schemes": [
        "remote-faces"
      ]
    }
  }
}
