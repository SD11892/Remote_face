{
  "name": "remote-faces",
  "productName": "Remote Faces",
  "description": "A small app to share webcam still images periodically",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "electron .",
    "test": "npm run eslint",
    "eslint": "eslint src",
    "dist": "electron-builder --mac --win",
    "release": "electron-builder --mac --win --publish always"
  },
  "author": "Daishi Kato",
  "main": "src/main.js",
  "dependencies": {
    "electron-store": "^2.0.0",
    "electron-updater": "^3.1.1"
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.28.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-console": 0,
      "prefer-template": 0,
      "import/no-extraneous-dependencies": 0
    }
  },
  "build": {
    "appId": "com.axlight.remote-faces",
    "publish": [{ "provider": "github" }],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}
