{
  "name": "remote-faces",
  "productName": "Remote Faces",
  "description": "A small app to share webcam still images periodically",
  "private": true,
  "version": "1.4.0",
  "scripts": {
    "start": "electron .",
    "test": "run-s eslint",
    "eslint": "eslint src public",
    "dist": "electron-builder --mac --win",
    "release": "electron-builder --mac --win --publish always"
  },
  "author": "Daishi Kato",
  "main": "electron/src/main.js",
  "dependencies": {
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "npm-run-all": "^4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-console": 0,
      "prefer-template": 0,
      "import/no-extraneous-dependencies": 0
    },
    "overrides": [
      {
        "files": [
          "public/**/*.js"
        ],
        "env": {
          "browser": true
        },
        "globals": {
          "Qs": true,
          "CryptoJS": true,
          "Peer": true
        },
        "rules": {
          "no-param-reassign": 0,
          "no-multi-assign": 0,
          "no-use-before-define": 0
        }
      }
    ]
  },
  "build": {
    "appId": "com.axlight.remote-faces",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}
